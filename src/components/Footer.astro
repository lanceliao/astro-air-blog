---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
import { FOOTER_ITEMS } from "../consts"
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
          </div>

          <div class="item products">
            <div class="item-title">作品</div>
            {
              FOOTER_ITEMS.PRODUCTS?.map((product) => {
                return (
                  <a href={product.url} target="_blank">{product.name}</a>
                );
              })
            }
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            {
              FOOTER_ITEMS.COMMUNITIES?.map((community) => {
                return (
                  <a href={community.url} target="_blank">{community.name}</a>
                );
              })
            }
          </div>

          <div class="item resources">
            <div class="item-title">友链</div>
            {
              FOOTER_ITEMS.RESOURCES?.map((resource) => {
                return (
                  <a href={resource.url} target="_blank">{resource.name}</a>
                );
              })
            }
          </div>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`2018-${year}  ${SITE_NAME}`} 
          <a href="//github.com/austin2035/astro-air-blog">astro-air-blog</a>
        </div>
      </div>
    </div>
  </div>
</div>
